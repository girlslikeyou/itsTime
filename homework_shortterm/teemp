          #mo_zzy {
            display: none;
            /*隐藏*/
            width: 100%;
            height: 100%;
            position: fixed;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.7);
            top: 0;
            left: 0;
            z-index: 1;
          }

          #moimg_zzy {
            display: block;
            margin: 25px auto;
            width: 60%;
            max-width: 750px;
          }

          #caption_zzy {
            text-align: center;
            margin: 15px auto;
            width: 60%;
            max-height: 750px;
            font-size: 20px;
            color: #ccc;
          }

          #moimg_zzy,
          #caption_zzy {
            animation: first 1s;
          }

          @keyframes first {
            from {
              transform: scale(0.1);
            }

            to {
              transform: scale(1);
            }
          }

          .close_zzy {
            font-size: 40px;
            font-weight: bold;
            position: absolute;
            top: 20px;
            right: 14%;
            color: #f1f1f1;
          }

          .close_zzy:hover,
          .close_zzy:focus {
            color: #bbb;
            cursor: pointer;
          }

          @media only screen and(max-width:750px) {
            #moimg_zzy {
              width: 100%;
            }
          }



