<div>
            <span class="close_zzy" id="close_zzy">×</span>
            <div class="motaiimg_zzy" id="moimg_zzy"></div>
            <div id="caption_zzy"></div>
          </div>
          <script>
              var realimg = document.getElementById("real_zzy");
              var caption = document.getElementById("caption_zzy");
              realimg.onclick = function() {
                  motai.style.display = "block";
                  moimg.src = "images/2.jpg";
              };
              var span = document.getElementById("close_zzy");
              span.onclick = function() {
                  motai.style.display = "none";
              }
          </script>

